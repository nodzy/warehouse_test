<div id="populate">
  <form action="/" method="post">
    <input type="submit" class="form_buttons" value="Seed Database">
  </form>
</div>
<div id="drop">
  <form action="/" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" class="form_buttons" value="Drop Database">
  </form>
</div>
<hr>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Price with vat</th>
    <th>Quantity in stock</th>
  </tr>
  <tr>
    <% item_categories.each_with_index do |category, i| %>
    <td><a href="/products/<%= category[:name] %>">
      <%= category[:name] %></a> 
    </td>
    <td><%= price[i] %></td>
    <td><%= price_with_vat[i] %></td>
    <td><%= category[:count] %></td>
  </tr>
  <% end %>
</table>
